<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="notifications"
        app:title="@string/settings_notifications_description"/>

    <Preference
        app:key="feedback"
        app:title="@string/settings_feedback_title"
        app:summary="@string/settings_feedback_description"/>

    <ListPreference
        app:key="locale"
        app:title="@string/settings_locale_title"
        app:entries="@array/language_names"
        app:entryValues="@array/language_id"/>
</PreferenceScreen>
